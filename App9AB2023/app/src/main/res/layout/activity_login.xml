<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0C164A"
    android:backgroundTint="#E4F7F8"
    android:orientation="vertical"
    tools:context=".LoginActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="165dp"
        android:layout_marginLeft="20px"
        android:layout_marginTop="50px"
        android:layout_marginRight="20px"
        android:layout_marginBottom="70px"
        android:background="@drawable/top_background"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="148dp"
            app:srcCompat="@drawable/logo_circle" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="505dp">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="314dp"
            android:layout_height="331dp"
            android:layout_marginTop="-10dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.461">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="164dp"
                    android:layout_height="27dp"
                    android:layout_marginTop="36dp"
                    android:text="@string/lbl_usuario"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.253"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/et_usuario"
                    style="@style/EditTextStyle"
                    android:layout_width="239dp"
                    android:layout_height="47dp"
                    android:layout_marginTop="48dp"
                    android:autoText="false"
                    android:ems="10"
                    android:hint="@string/plh_usuario"
                    android:inputType="textPersonName"
                    android:singleLine="false"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:theme="@style/HintStyle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/registrate" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="220dp"
                    android:layout_height="31dp"
                    android:layout_marginTop="108dp"
                    android:text="@string/lbl_pass"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.382"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/et_pass"
                    style="@style/EditTextStyle"
                    android:layout_width="245dp"
                    android:layout_height="44dp"
                    android:layout_marginTop="128dp"
                    android:ems="10"
                    android:hint="@string/plh_pass"
                    android:inputType="textPassword"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:theme="@style/HintStyle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.521"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="232dp"
                    android:layout_height="57dp"
                    android:layout_gravity="center"
                    android:backgroundTint="#0A77CF"
                    android:text="@string/btn_ingresar"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.667" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="224dp"
                    android:layout_height="53dp"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="#1FD131"
                    android:onClick="IraRegistro"
                    android:text="CREAR CUENTA NUEVA"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/registrate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="IraRecuperar"
                    android:text="@string/a_registro"

                    android:textAlignment="textEnd"
                    android:textColor="#00E91E63"
                    tools:layout_editor_absoluteX="-15dp"
                    tools:layout_editor_absoluteY="6dp" />

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:text="o"
                    android:textAlignment="center"
                    android:textColor="#595555"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.501"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="287dp"
            android:layout_height="64dp"
            android:text="ANIMAL PLACE VETERINARY CLINIC"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="0dp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="54dp"
            android:layout_height="57dp"
            android:onClick="IraIg"
            android:src="@drawable/instag"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.63"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.944" />

        <ImageView
            android:id="@+id/imagfb"
            android:layout_width="54dp"
            android:layout_height="57dp"
            android:onClick="IraFb"
            android:src="@drawable/face"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.366"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.944" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>
